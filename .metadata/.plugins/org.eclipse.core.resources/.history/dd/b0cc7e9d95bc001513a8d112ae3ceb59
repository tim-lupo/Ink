import java.util.ArrayList;

public class Lexer {
	
	private String code;
	
	public Lexer(String code) {
		super();
		this.code = code;
	}

	public ArrayList<String> lex() {

		char[] toklist = code.toCharArray();
		ArrayList<String> tokens = new ArrayList<String>();
		String toks = "";
		boolean isPara = false;
		boolean isQuot = false;
		boolean isMath = false;
		
		for (char tok : toklist) {
			char tok = token[i];
			if (tok == '(') {
				isPara = true;
			} else if (tok == ')') {
				isPara = false;
			} else if (tok == '"') {
				if (isQuot == false) { isQuot = true; }
				else { isQuot = false; }
			}
			
			if ((tok == '=')) { 
				if (toklist.)
				else if (toks == "") {
					tokens.add(String.valueOf(tok));
					toks = "";
				} else {
					tokens.add(toks);
					tokens.add(String.valueOf(tok));
					toks = "";
				}
				isMath = true;
			} else if (tok == '~') {
				isMath = false;
				if (toks != "") { tokens.add(toks); toks = ""; }
				tokens.add("<EOL>");
			} else if ((tok == '(') || (tok == '{')) {
				boolean allPara = true;
				for (int i=0; i<toks.toCharArray().length; i++) {
					if (toks.toCharArray()[i] != '(') {
						allPara = false;
					}
				}
				if (toks != "" && allPara == false) {
					tokens.add(toks);
					toks = "";
					toks += tok;
				} else {
					toks += tok;
				}
			} else if ((tok != ' ') || (isPara == true) || (isQuot == true) || (isMath == true)) {
				System.out.println("ISPARA : " + tok + " | " + isPara);
				toks += tok;
			}  else {	
				if (toks != "") { tokens.add(toks); }
				toks = "";
			}
		}
		System.out.println(tokens);
		return tokens;
	}
}
