import java.util.ArrayList;

import javax.script.ScriptException;

public class Variable {
	
	private String name;
	private Object value;
	
	public Variable(String name, Object value) {
		super();
		this.name = name;
		this.value = value;
	}

	public String getName() {
		return name;
	}

	public String getValue() throws ScriptException {
		boolean varExists = true;
		Value val = new Value();
		while (true) {
			
		}
		//Object obj = val.evaluate(value.toString());
		String str = value.toString();
		return str;
	}

	public void setValue(Object value) {
		this.value = value;
	}
	
	private ArrayList<String> lex (String str) {
		char[] toklist = str.toCharArray();
		ArrayList<String> tokens = new ArrayList<String>();
		String toks = "";
		for (char tok : toklist) {
			if (tok == '+' || tok == '-' || tok == '/' || tok == '*') {
				tokens.add(toks);
				toks = "";
				toks += tok;
				tokens.add(toks);
				toks = "";
			} else if (tok == '~') {
				if (toks != "") { tokens.add(toks); toks = ""; }
			} else {
				toks += tok;
			}
		}
		return tokens;
	}
}
